<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.devexchanges.navvp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label=""
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DesActivity"
            android:label="DestinationActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".TableActivity" />
        <activity android:name=".MenuTabsActivity" />
        <activity android:name=".ForgotPWActivity" />
        <activity android:name=".ResetPWActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https" android:host="roronoa-zoro.herokuapp.com" android:path="/confirm" />

            </intent-filter>
        </activity>
    </application>

</manifest>