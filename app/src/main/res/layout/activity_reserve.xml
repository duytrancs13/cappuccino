    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tên khách"
                            android:layout_marginBottom="5dp"
                            />

                        <!--Ten-->
                        <EditText
                            android:id="@+id/etNameReserve"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Nhập tên khách"
                            android:textSize="14dp"
                            android:background="@color/bgrEdittext"
                            android:paddingLeft="10dp"
                            android:layout_marginBottom="10dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Số điện thoại"
                            android:layout_marginBottom="5dp"
                            />


                        <EditText
                            android:id="@+id/etNumberPhoneReserve"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textSize="14dp"
                            android:hint="Nhập số điện thoại"
                            android:background="@color/bgrEdittext"
                            android:digits="0123456789"
                            android:inputType="phone"
                            android:paddingLeft="10dp"
                            android:layout_marginBottom="5dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Số lượng người"
                            android:layout_marginBottom="5dp"
                            />


                        <EditText
                            android:id="@+id/etQuantityReserve"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textSize="14dp"
                            android:hint="Nhập số lượng người"
                            android:background="@color/bgrEdittext"
                            android:digits="0123456789"
                            android:inputType="phone"
                            android:paddingLeft="10dp"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ngày đến"
                                android:layout_marginBottom="5dp"
                                />


                            <EditText
                                android:id="@+id/etDateReserve"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textSize="14dp"
                                android:hint="Chonj ngày đến"
                                android:background="@color/bgrEdittext"
                                android:digits="0123456789"
                                android:inputType="phone"
                                android:paddingLeft="10dp"
                                />
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            >

                        </View>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thời gian đến"
                                android:layout_marginBottom="5dp"
                                />


                            <EditText
                                android:id="@+id/etTimeComeReserve"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textSize="14dp"
                                android:hint="Chọn thời gian đến"
                                android:background="@color/bgrEdittext"
                                android:paddingLeft="10dp"
                                />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ghi chú"
                            android:layout_marginBottom="5dp"
                            />

                        <EditText
                            android:id="@+id/etNoteReserve"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:hint="Nhập ghi chú (nếu có)"
                            android:textSize="14dp"
                            android:background="@color/bgrEdittext"
                            android:inputType="text|textMultiLine"
                            android:paddingLeft="10dp"
                            android:gravity="top"
                            android:paddingTop="5dp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:translationY="-5dp"
                >
                <Button
                    android:id="@+id/btnConfirmReserve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:background="@drawable/button_login"
                    android:text="Xác nhận"
                    />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>









</LinearLayout>
