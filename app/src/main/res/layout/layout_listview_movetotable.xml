<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_margin="10dp"
        >
        <ImageView
            android:id="@+id/imageMoveToTable"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:layout_weight="0.2"
            android:layout_marginRight="10dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/tvNameMoveToTable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="cafe sua"
                    android:textSize="18dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <!--<Button
                    android:id="@+id/btnQualityMoveToTable"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/buttonquality"
                    android:text="1"
                    android:textColor="@color/colorPrimary"
                    android:clickable = "false"
                    />-->
                <TextView
                    android:id="@+id/tvMoneyMoveToTable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="50.000 d"
                    android:textSize="16dp"
                    android:gravity="right"
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>