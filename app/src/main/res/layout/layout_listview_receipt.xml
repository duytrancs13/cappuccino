<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


        <ImageView
            android:id="@+id/imageReceipt"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_weight="0.3"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:id="@+id/tvNameReceipt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cafe sua"
                    android:textSize="24dp"
                    android:textColor="?attr/colorPrimary"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tvPriceReceipt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25.000 d"
                    android:textSize="16dp"
                    />
                <!--<View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                    <Button
                        android:id="@+id/btnQualityReceipt"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/buttonquanlity"
                        android:text="1"
                        android:textColor="@color/colorPrimary"
                        android:clickable = "false"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvMoneyReceipt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50.000 d"
                    android:textSize="16dp"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/bgrEdittext" />

    </LinearLayout>



</LinearLayout>



