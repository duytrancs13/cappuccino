    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


        <Button
            android:id="@+id/btnStatusExpense"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:layout_weight="0.15"
            android:background="@drawable/ic_expense_approved"
            android:focusable="false"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.85"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                >

                <TextView
                    android:id="@+id/tvNameExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sua ong tho"
                    android:textSize="16dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tvCreateAtExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/01/2018"
                    android:textSize="14dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                    <Button
                        android:id="@+id/btnQuantityExpense"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/buttonquality"
                        android:text="1"
                        android:textColor="@color/colorPrimary"
                        android:clickable = "false"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:focusable="false"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvPriceExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50.000 d"
                    android:textSize="14dp"
                    />
            </LinearLayout>
